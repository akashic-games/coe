{
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "allowBranch": [
        "master"
      ]
    },
    "version": {
      "exact": true
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ],
      "hoist": true
    }
  },
  "packages": [
    "packages/*"
  ]
}
