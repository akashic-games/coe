{
  "name": "@akashic-extension/coe",
  "version": "1.0.0",
  "description": "A co-experience library for Akashic Engine",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "scripts": {
    "prepublish": "npm run build",
    "build": "rimraf ./lib && tsc -p ./tsconfig.json && npm run formatter",
    "formatter": "prettier --write \"src/**/*.ts\" --config ../prettier.config.js",
    "test": "npm run run:jest && npm run lint",
    "run:jest": "jest",
    "lint": "tslint -c ../tslint.json -p tsconfig.json -e \"**/node_modules/**\""
  },
  "files": [
    "lib",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "@akashic-extension/registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akashic-games/coe.git"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/akashic-games/coe/issues"
  },
  "homepage": "https://github.com/akashic-games/coe#readme",
  "devDependencies": {
    "@types/jest": "24.0.12",
    "@types/node": "12.0.0",
    "jest": "^24.8.0",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "tslint": "~5.16.0",
    "typescript": "~3.4.5"
  },
  "dependencies": {
    "@akashic/akashic-engine": "~2.4.14",
    "@akashic-environment/coe-plugin": "~2.0.0",
    "@akashic-extension/coe-messages": "~1.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "<rootDir>/src/__tests__/**/*.spec.ts"
    ],
    "globalSetup": "<rootDir>/src/__tests__/global.ts"
  }
}
